<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white</item>
    </style>

    <style name="GrayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/gray_bg</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:colorControlNormal">@color/gray_default</item>
    </style>
    <style name="MySwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:colorControlNormal">@color/gray_default</item>
    </style>

    <style name="BottomImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bottom_icon_width_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="NotificationViewImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/big_notification_icon_width_height</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MusicPlayBottomImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/music_play_bottom_icon_width_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/middle_text_size</item>
    </style>

</resources>
