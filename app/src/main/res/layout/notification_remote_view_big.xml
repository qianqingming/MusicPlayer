<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_layout"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/notification_music_img"
        android:layout_width="@dimen/big_notification_layout_height"
        android:layout_height="@dimen/big_notification_layout_height"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10">
            <TextView
                android:id="@+id/notification_music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/bottom_music_default_text"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/notification_close"
                android:layout_marginEnd="@dimen/margin_10"
                android:textSize="@dimen/big_notification_text_size"/>
            <TextView
                android:id="@+id/notification_music_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/margin_10"
                android:singleLine="true"
                android:layout_toStartOf="@id/notification_close"
                android:layout_below="@id/notification_music_name"/>
            <ImageView
                android:id="@+id/notification_close"
                android:layout_width="@dimen/big_notification_icon_width_height"
                android:layout_height="@dimen/big_notification_icon_width_height"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_close_notification"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <!--<ImageView
                android:id="@+id/add_favorite"
                style="@style/NotificationViewImageStyle"
                android:src="@drawable/ic_add_favorite_notification"/>
            <ImageView
                android:id="@+id/remove_favorite"
                style="@style/NotificationViewImageStyle"
                android:visibility="gone"
                android:src="@drawable/ic_favorite"/>-->
            <ImageView
                android:id="@+id/notification_last_music"
                style="@style/NotificationViewImageStyle"
                android:src="@drawable/ic_pre_music"/>
            <ImageView
                android:id="@+id/notification_play_music"
                style="@style/NotificationViewImageStyle"
                android:src="@drawable/ic_play_music"/>
            <ImageView
                android:id="@+id/notification_pause_music"
                style="@style/NotificationViewImageStyle"
                android:visibility="gone"
                android:src="@drawable/ic_pause_music"/>
            <ImageView
                android:id="@+id/notification_next_music"
                style="@style/NotificationViewImageStyle"
                android:src="@drawable/ic_next_music"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>