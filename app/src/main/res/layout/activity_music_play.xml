<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:paddingBottom="10dp"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/back_image_view"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_white"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <com.tct.musicplayer.views.MarqueeTextView
                android:id="@+id/music_name"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <com.tct.musicplayer.views.MarqueeTextView
                android:id="@+id/music_singer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageView
            android:id="@+id/share_image_view"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_share"/>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout"
        android:layout_above="@id/circle_layout"/>


    <LinearLayout
        android:id="@+id/circle_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_above="@id/bottom_progress_layout"
        android:gravity="center">
        <View
            android:id="@+id/circle1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_circle"/>
        <View
            android:id="@+id/circle2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_circle"/>
        <View
            android:id="@+id/circle3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_circle"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@id/bottom_layout">
        <TextView
            android:id="@+id/music_curr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_time"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/music_curr_time"
            android:layout_toLeftOf="@id/music_total_time"/>
        <TextView
            android:id="@+id/music_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_time"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:gravity="center">
        <!--<ImageView
            android:id="@+id/playing_list"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_playing_list"/>-->
        <ImageView
            android:id="@+id/play_in_order"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_in_order" />
        <ImageView
            android:id="@+id/play_single_cycle"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_single_cycle" />
        <ImageView
            android:id="@+id/play_random"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_random" />
        <ImageView
            android:id="@+id/last_music"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_pre_music_white"/>
        <ImageView
            android:id="@+id/play_music"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_music_white"/>
        <ImageView
            android:id="@+id/pause_music"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_pause_music_white"/>
        <ImageView
            android:id="@+id/next_music"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_next_music_white"/>
        <ImageView
            android:id="@+id/add_favorite"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_favorite_add_white"/>
        <ImageView
            android:id="@+id/remove_favorite"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_favorite"/>
    </LinearLayout>
</RelativeLayout>