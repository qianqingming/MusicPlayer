<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tct.musicplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_default_music"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_default_music"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MusicPlayActivity"></activity>

        <receiver
            android:name=".receiver.BaseReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ACTION_CLOSE" />
                <action android:name="ACTION_PLAY_MUSIC" />
                <action android:name="ACTION_PAUSE_MUSIC" />
                <action android:name="ACTION_LAST_MUSIC" />
                <action android:name="ACTION_NEXT_MUSIC" />
                <action android:name="ACTION_PLAY_SELECTED_MUSIC" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.MusicService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".PermissionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:launchMode="singleTask"/>
    </application>

</manifest>